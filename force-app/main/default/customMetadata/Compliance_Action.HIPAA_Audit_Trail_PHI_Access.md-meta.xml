    <label>HIPAA Audit Trail PHI Access</label>
    <protected>false</protected>
    <values>
        <field>Action_Title__c</field>
        <value xsi:type="xsd:string">Enable PHI Access Audit Trail</value>
    </values>
    <values>
        <field>Action_Description__c</field>
        <value xsi:type="xsd:string">Configure comprehensive audit logging for all access to Protected Health Information. HIPAA requires covered entities to implement hardware, software, and procedural mechanisms to record and examine activity in systems containing ePHI.</value>
    </values>
