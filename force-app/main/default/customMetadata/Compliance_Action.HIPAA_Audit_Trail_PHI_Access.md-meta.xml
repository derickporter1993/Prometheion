    </values>
    <values>
        <field>Category__c</field>
        <value xsi:type="xsd:string">Audit</value>
    </values>
    <values>
        <field>Setup_Path__c</field>
        <value xsi:type="xsd:string">SetupAuditTrail/home</value>
    </values>
    <values>
        <field>Priority_Order__c</field>
        <value xsi:type="xsd:double">4</value>
    </values>
    <values>
        <field>Is_Active__c</field>
        <value xsi:type="xsd:boolean">true</value>
    </values>
