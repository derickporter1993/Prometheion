    <label>SOC2 Restrict Admin Profiles</label>
    <protected>false</protected>
    <values>
        <field>Action_Title__c</field>
        <value xsi:type="xsd:string">Restrict Admin Profile Access</value>
    </values>
    <values>
        <field>Action_Description__c</field>
        <value xsi:type="xsd:string">Limit System Administrator profile assignment to essential personnel only. Excessive admin access violates least-privilege principles and creates unnecessary risk exposure for SOC2 logical access controls.</value>
    </values>
