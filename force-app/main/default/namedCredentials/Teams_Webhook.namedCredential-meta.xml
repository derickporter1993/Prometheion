<?xml version="1.0" encoding="UTF-8"?>
<!--
    CONFIGURATION REQUIRED: Replace YOUR_WEBHOOK_URL with your actual Teams webhook URL
    
    To get a webhook URL:
    1. In Microsoft Teams, go to the channel where you want notifications
    2. Click ••• (More options) > Connectors
    3. Find "Incoming Webhook" and click Configure
    4. Name your webhook and click Create
    5. Copy the webhook URL and replace YOUR_WEBHOOK_URL below
    
    WARNING: Notifications will fail until this is configured!
-->
<NamedCredential xmlns="http://soap.sforce.com/2006/04/metadata">
    <allowMergeFieldsInBody>false</allowMergeFieldsInBody>
    <allowMergeFieldsInHeader>false</allowMergeFieldsInHeader>
    <calloutStatus>Enabled</calloutStatus>
    <generateAuthorizationHeader>false</generateAuthorizationHeader>
    <label>Teams Webhook</label>
    <namedCredentialParameters>
        <parameterName>url</parameterName>
        <parameterType>Url</parameterType>
        <!-- PLACEHOLDER: Replace with your actual Teams webhook URL -->
        <parameterValue>https://outlook.office.com/webhook/YOUR_WEBHOOK_URL</parameterValue>
    </namedCredentialParameters>
    <namedCredentialParameters>
        <parameterName>authentication</parameterName>
        <parameterType>Authentication</parameterType>
        <parameterValue>NoAuthentication</parameterValue>
    </namedCredentialParameters>
    <namedCredentialType>SecuredEndpoint</namedCredentialType>
</NamedCredential>
