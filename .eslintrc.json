{
  "root": true,
  "env": { "es2021": true, "browser": true },
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["@lwc/lwc"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "requireConfigFile": false,
    "babelOptions": {
      "parserOpts": {
        "plugins": ["classProperties", "decorators-legacy"]
      }
    }
  },
  "rules": { "no-console": "warn", "no-unused-vars": "warn" }
}
